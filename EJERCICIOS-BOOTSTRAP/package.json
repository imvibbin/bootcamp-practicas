{
  "name": "ejercicios-bootstrap",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:sass": "sass  --no-source-map styles/sass:public/styles",
    "copy:html": "copyfiles -u 1 ./html/*.html public",
    "copy": "npm-run-all --parallel copy:*",
    "watch:html": "onchange \"html/*.html\" -- npm run copy:html",
    "watch:sass": "sass  --no-source-map --watch styles/:public/styles",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss public/styles/*.css -u autoprefixer cssnano -r --no-map"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.3.0",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8"
  }
  }

